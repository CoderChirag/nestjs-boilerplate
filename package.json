{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "Boilerpate for nestjs project",
  "author": "Chirag Jain",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "lerna run build --stream",
    "graph": "nx graph",
    "dev": "lerna run start:dev --scope app --stream",
    "packages:dev": "lerna watch -- lerna run build --ignore app --stream",
    "start:dev": "concurrently \"yarn packages:dev\" \"yarn dev\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^8.1.7",
    "nx": "^19.5.6",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "packageManager": "yarn@4.3.1"
}
